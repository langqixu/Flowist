# Environment Variables for Flowist
# Copy this file to .env and fill in your actual values

# LLM Configuration
# Choose ONE of the following configurations:

# Option 1: OpenAI (Default)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
# OPENAI_BASE_URL=  # Leave empty for official OpenAI

# Option 2: DeepSeek (国内推荐，兼容 OpenAI API)
# OPENAI_API_KEY=sk-your_deepseek_key
# OPENAI_MODEL=deepseek-chat
# OPENAI_BASE_URL=https://api.deepseek.com

# Option 3: 阿里通义千问 Qwen
# OPENAI_API_KEY=sk-your_qwen_key
# OPENAI_MODEL=qwen-plus
# OPENAI_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Option 4: 本地 Ollama
# OPENAI_API_KEY=ollama
# OPENAI_MODEL=llama3
# OPENAI_BASE_URL=http://localhost:11434/v1

# Option 5: Azure OpenAI
# OPENAI_API_KEY=your_azure_key
# OPENAI_MODEL=gpt-4
# OPENAI_BASE_URL=https://your-resource.openai.azure.com/openai/deployments/your-deployment

# Vector Database (ChromaDB)
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=flowist_knowledge

# Optional: Alternative LLM (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: ElevenLabs TTS
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Application Settings
APP_ENV=development
DEBUG=true
